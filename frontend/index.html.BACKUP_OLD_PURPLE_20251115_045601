        // Individual Patient Profile Component
        const PatientProfile = () => {
            const [patient, setPatient] = useState(null);
            const [loading, setLoading] = useState(true);
            const { selectedPatientId, setCurrentPage } = useNavigation();
            
            useEffect(() => {
                if (selectedPatientId) {
                    fetchPatientDetails();
                }
            }, [selectedPatientId]);
            
            const fetchPatientDetails = async () => {
                try {
                    const response = await fetch(`/api/v1/clinic/patients/${selectedPatientId}`);
                    if (response.ok) {
                        const data = await response.json();
                        setPatient(data);
                    }
                } catch (error) {
                    console.error('Error fetching patient:', error);
                }
                setLoading(false);
            };
            
            if (loading) {
                return (
                    <div className="flex items-center justify-center py-12">
                        <i className="fas fa-spinner fa-spin text-4xl text-indigo-600"></i>
                    </div>
                );
            }
            
