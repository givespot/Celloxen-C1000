<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Celloxen Health Portal</title>
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        /* Navy Blue Theme - NO PURPLE! */
        .navy-gradient {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        }
        .navy-bg { background-color: #1e3a8a; }
        .navy-dark-bg { background-color: #1e293b; }
        .navy-light-bg { background-color: #3b82f6; }
        .navy-text { color: #1e3a8a; }
        
        .sidebar-item {
            transition: all 0.2s ease;
        }
        .sidebar-item:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(4px);
        }
        .sidebar-item.active {
            background: rgba(255, 255, 255, 0.2);
            border-left: 4px solid white;
        }
        
        .stat-card {
            transition: all 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(30, 58, 138, 0.2);
        }
        
        .btn-navy {
            background: #1e3a8a;
            transition: all 0.3s ease;
        }
        .btn-navy:hover {
            background: #1e293b;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(30, 58, 138, 0.3);
        }
        
        .spinner {
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            animation: spin 0.8s linear infinite;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .table-row {
            transition: background-color 0.2s ease;
        }
        .table-row:hover {
            background-color: #f9fafb;
        }
        
        .progress-step {
            transition: all 0.3s ease;
        }
        .progress-step.active {
            background: #1e3a8a;
            color: white;
        }
        .progress-step.completed {
            background: #10b981;
            color: white;
        }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useContext, createContext } = React;

        // Auth Context
        const AuthContext = createContext();
        
        const AuthProvider = ({ children }) => {
            const [user, setUser] = useState(null);
            const [loading, setLoading] = useState(true);
            
            useEffect(() => {
                const token = localStorage.getItem('celloxen_token');
                const userData = localStorage.getItem('celloxen_user');
                if (token && userData) {
                    setUser(JSON.parse(userData));
                }
                setLoading(false);
            }, []);
            
            const login = async (email, password) => {
                try {
                    const response = await fetch('/api/v1/auth/login', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email, password })
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        setUser(data.user);
                        localStorage.setItem('celloxen_token', data.access_token);
                        localStorage.setItem('celloxen_user', JSON.stringify(data.user));
                        return { success: true };
                    }
                    return { success: false, error: 'Invalid credentials' };
                } catch (error) {
                    return { success: false, error: 'Connection error' };
                }
            };
            
            const logout = () => {
                setUser(null);
                localStorage.removeItem('celloxen_token');
                localStorage.removeItem('celloxen_user');
            };
            
            return (
                <AuthContext.Provider value={{ user, login, logout, loading }}>
                    {children}
                </AuthContext.Provider>
            );
        };
        
        const useAuth = () => useContext(AuthContext);

        // Login Page Component
        const LoginPage = () => {
            const [email, setEmail] = useState('');
            const [password, setPassword] = useState('');
            const [error, setError] = useState('');
            const [loading, setLoading] = useState(false);
            const [rememberMe, setRememberMe] = useState(false);
            const { login } = useAuth();
            
            useEffect(() => {
                const rememberedEmail = localStorage.getItem('celloxen_remembered_email');
                if (rememberedEmail) {
                    setEmail(rememberedEmail);
                    setRememberMe(true);
                }
            }, []);
            
            const validateEmail = (email) => {
                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            };
            
            const handleSubmit = async (e) => {
                e.preventDefault();
                setError('');
                
                if (!validateEmail(email)) {
                    setError('Please enter a valid email address');
                    return;
                }
                
                if (password.length < 6) {
                    setError('Password must be at least 6 characters');
                    return;
                }
                
                setLoading(true);
                const result = await login(email, password);
                
                if (result.success) {
                    if (rememberMe) {
                        localStorage.setItem('celloxen_remembered_email', email);
                    } else {
                        localStorage.removeItem('celloxen_remembered_email');
                    }
                } else {
                    setError(result.error);
                    setLoading(false);
                }
            };
            
            return (
                <div className="min-h-screen navy-gradient flex items-center justify-center p-4">
                    <div className="w-full max-w-md">
                        <div className="bg-white rounded-2xl shadow-2xl p-8">
                            <div className="text-center mb-8">
                                <div className="inline-flex items-center justify-center w-20 h-20 navy-bg rounded-full mb-4">
                                    <svg className="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                    </svg>
                                </div>
                                <h1 className="text-3xl font-bold text-gray-900 mb-2">Celloxen Health Portal</h1>
                                <p className="text-gray-600">Sign in to access your clinic dashboard</p>
                            </div>

                            <form onSubmit={handleSubmit} className="space-y-5">
                                {error && (
                                    <div className="bg-red-50 border-l-4 border-red-500 p-4 rounded">
                                        <p className="text-red-800 font-semibold text-sm">{error}</p>
                                    </div>
                                )}

                                <div>
                                    <label className="block text-gray-700 font-semibold mb-2">Email Address</label>
                                    <input
                                        type="email"
                                        value={email}
                                        onChange={(e) => setEmail(e.target.value)}
                                        placeholder="practitioner@celloxen.com"
                                        required
                                        className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                    />
                                </div>

                                <div>
                                    <label className="block text-gray-700 font-semibold mb-2">Password</label>
                                    <input
                                        type="password"
                                        value={password}
                                        onChange={(e) => setPassword(e.target.value)}
                                        placeholder="••••••••"
                                        required
                                        className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                    />
                                </div>

                                <div className="flex items-center justify-between">
                                    <label className="flex items-center">
                                        <input
                                            type="checkbox"
                                            checked={rememberMe}
                                            onChange={(e) => setRememberMe(e.target.checked)}
                                            className="w-4 h-4 rounded border-gray-300"
                                            style={{accentColor: '#1e3a8a'}}
                                        />
                                        <span className="ml-2 text-gray-700 text-sm">Remember me</span>
                                    </label>
                                    <a href="#" className="text-sm font-semibold navy-text hover:underline">
                                        Forgot password?
                                    </a>
                                </div>

                                <button
                                    type="submit"
                                    disabled={loading}
                                    className="btn-navy w-full py-3 text-white font-semibold rounded-lg flex items-center justify-center"
                                >
                                    {loading ? (
                                        <>
                                            <span>Signing in...</span>
                                            <div className="spinner ml-2"></div>
                                        </>
                                    ) : (
                                        'Sign In'
                                    )}
                                </button>
                            </form>

                            <div className="mt-6 text-center">
                                <p className="text-sm text-gray-600">
                                    Need access? Contact your clinic administrator
                                </p>
                            </div>
                        </div>

                        <div className="text-center mt-4 text-white text-sm opacity-75">
                            Celloxen Health Portal v2.0 • Navy Blue Edition
                        </div>
                    </div>
                </div>
            );
        };

        // Patient Registration Form Component
        const PatientRegistration = ({ onBack, onSuccess }) => {
            const [currentStep, setCurrentStep] = useState(1);
            const [loading, setLoading] = useState(false);
            const [errors, setErrors] = useState({});
            
            // Form data
            const [formData, setFormData] = useState({
                // Step 1: Personal Information
                first_name: '',
                last_name: '',
                date_of_birth: '',
                gender: '',
                email: '',
                mobile_phone: '',
                
                // Step 2: Address & Emergency Contact
                address_line1: '',
                address_line2: '',
                city: '',
                county: '',
                postcode: '',
                emergency_contact: '',
                emergency_phone: '',
                emergency_relationship: '',
                
                // Step 3: Medical Information
                medical_conditions: '',
                medications: '',
                allergies: '',
                insurance_details: '',
                notes: ''
            });

            // Validation functions
            const validateDateOfBirth = (dob) => {
                const regex = /^(\d{2})\/(\d{2})\/(\d{4})$/;
                if (!regex.test(dob)) return false;
                
                const [, day, month, year] = dob.match(regex);
                const date = new Date(year, month - 1, day);
                
                if (date.getDate() != day || date.getMonth() != month - 1 || date.getFullYear() != year) {
                    return false;
                }
                
                const today = new Date();
                const age = today.getFullYear() - date.getFullYear();
                const monthDiff = today.getMonth() - date.getMonth();
                
                if (age < 18 || (age === 18 && monthDiff < 0)) {
                    return false;
                }
                
                if (date > today) return false;
                
                return true;
            };

            const validateUKPhone = (phone) => {
                const cleaned = phone.replace(/\s/g, '');
                const ukMobile = /^(07\d{9}|447\d{9}|\+447\d{9})$/;
                const ukLandline = /^(0[1-9]\d{8,9})$/;
                return ukMobile.test(cleaned) || ukLandline.test(cleaned);
            };

            const validateUKPostcode = (postcode) => {
                const regex = /^[A-Z]{1,2}\d{1,2}[A-Z]?\s?\d[A-Z]{2}$/i;
                return regex.test(postcode);
            };

            const validateEmail = (email) => {
                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            };

            const validateStep1 = () => {
                const newErrors = {};
                
                if (!formData.first_name.trim()) newErrors.first_name = 'First name is required';
                if (!formData.last_name.trim()) newErrors.last_name = 'Last name is required';
                
                if (!formData.date_of_birth.trim()) {
                    newErrors.date_of_birth = 'Date of birth is required';
                } else if (!validateDateOfBirth(formData.date_of_birth)) {
                    newErrors.date_of_birth = 'Invalid date format (dd/mm/yyyy) or age under 18';
                }
                
                if (!formData.gender) newErrors.gender = 'Gender is required';
                
                if (!formData.email.trim()) {
                    newErrors.email = 'Email is required';
                } else if (!validateEmail(formData.email)) {
                    newErrors.email = 'Invalid email format';
                }
                
                if (!formData.mobile_phone.trim()) {
                    newErrors.mobile_phone = 'Telephone is required';
                } else if (!validateUKPhone(formData.mobile_phone)) {
                    newErrors.mobile_phone = 'Invalid UK telephone number';
                }
                
                setErrors(newErrors);
                return Object.keys(newErrors).length === 0;
            };

            const validateStep2 = () => {
                const newErrors = {};
                
                if (!formData.address_line1.trim()) newErrors.address_line1 = 'Address Line 1 is required';
                if (!formData.city.trim()) newErrors.city = 'City/Town is required';
                if (!formData.county.trim()) newErrors.county = 'County is required';
                
                if (!formData.postcode.trim()) {
                    newErrors.postcode = 'Postcode is required';
                } else if (!validateUKPostcode(formData.postcode)) {
                    newErrors.postcode = 'Invalid UK postcode format';
                }
                
                if (!formData.emergency_contact.trim()) newErrors.emergency_contact = 'Emergency contact name is required';
                
                if (!formData.emergency_phone.trim()) {
                    newErrors.emergency_phone = 'Emergency contact telephone is required';
                } else if (!validateUKPhone(formData.emergency_phone)) {
                    newErrors.emergency_phone = 'Invalid UK telephone number';
                }
                
                if (!formData.emergency_relationship.trim()) newErrors.emergency_relationship = 'Relationship is required';
                
                setErrors(newErrors);
                return Object.keys(newErrors).length === 0;
            };

            const handleNext = () => {
                if (currentStep === 1 && validateStep1()) {
                    setCurrentStep(2);
                    setErrors({});
                } else if (currentStep === 2 && validateStep2()) {
                    setCurrentStep(3);
                    setErrors({});
                }
            };

            const handleBack = () => {
                if (currentStep > 1) {
                    setCurrentStep(currentStep - 1);
                    setErrors({});
                } else {
                    onBack();
                }
            };

            const handleSubmit = async (e) => {
                e.preventDefault();
                setLoading(true);
                setErrors({});

                try {
                    // Convert dd/mm/yyyy to yyyy-mm-dd for database
                    const [day, month, year] = formData.date_of_birth.split('/');
                    const dbDate = `${year}-${month}-${day}`;

                    const response = await fetch('/api/v1/clinic/patients', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            ...formData,
                            date_of_birth: dbDate,
                            clinic_id: 1,
                            status: 'active'
                        })
                    });

                    if (response.ok) {
                        const data = await response.json();
                        alert(`Success! Patient ${data.patient_number} created successfully.`);
                        onSuccess();
                    } else {
                        const error = await response.json();
                        setErrors({ submit: error.detail || 'Failed to create patient' });
                    }
                } catch (error) {
                    setErrors({ submit: 'Connection error. Please try again.' });
                }
                setLoading(false);
            };

            const handleChange = (field, value) => {
                setFormData({ ...formData, [field]: value });
                if (errors[field]) {
                    setErrors({ ...errors, [field]: null });
                }
            };

            return (
                <div className="p-6">
                    <div className="mb-6">
                        <button
                            onClick={handleBack}
                            className="flex items-center text-gray-600 hover:text-gray-900 mb-4"
                        >
                            <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
                            </svg>
                            Back to Patients
                        </button>
                        <h1 className="text-3xl font-bold text-gray-900">Add New Patient</h1>
                        <p className="text-gray-600 mt-1">Complete all steps to register a new patient</p>
                    </div>

                    {/* Progress Steps */}
                    <div className="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-6">
                        <div className="flex items-center justify-between mb-8">
                            <div className="flex items-center space-x-4">
                                <div className={`progress-step w-10 h-10 rounded-full flex items-center justify-center font-bold ${currentStep >= 1 ? 'active' : 'bg-gray-200 text-gray-600'}`}>
                                    1
                                </div>
                                <span className={`font-semibold ${currentStep === 1 ? 'navy-text' : 'text-gray-600'}`}>Personal Info</span>
                            </div>
                            <div className="flex-1 h-1 mx-4 bg-gray-200">
                                <div className={`h-full transition-all ${currentStep >= 2 ? 'bg-green-500' : 'bg-gray-200'}`} style={{width: currentStep >= 2 ? '100%' : '0%'}}></div>
                            </div>
                            <div className="flex items-center space-x-4">
                                <div className={`progress-step w-10 h-10 rounded-full flex items-center justify-center font-bold ${currentStep >= 2 ? 'active' : 'bg-gray-200 text-gray-600'}`}>
                                    2
                                </div>
                                <span className={`font-semibold ${currentStep === 2 ? 'navy-text' : 'text-gray-600'}`}>Address & Contact</span>
                            </div>
                            <div className="flex-1 h-1 mx-4 bg-gray-200">
                                <div className={`h-full transition-all ${currentStep >= 3 ? 'bg-green-500' : 'bg-gray-200'}`} style={{width: currentStep >= 3 ? '100%' : '0%'}}></div>
                            </div>
                            <div className="flex items-center space-x-4">
                                <div className={`progress-step w-10 h-10 rounded-full flex items-center justify-center font-bold ${currentStep >= 3 ? 'active' : 'bg-gray-200 text-gray-600'}`}>
                                    3
                                </div>
                                <span className={`font-semibold ${currentStep === 3 ? 'navy-text' : 'text-gray-600'}`}>Medical Info</span>
                            </div>
                        </div>

                        <form onSubmit={handleSubmit}>
                            {/* Step 1: Personal Information */}
                            {currentStep === 1 && (
                                <div className="space-y-4">
                                    <h2 className="text-xl font-bold navy-text mb-4">Personal Information</h2>
                                    
                                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">First Name *</label>
                                            <input
                                                type="text"
                                                value={formData.first_name}
                                                onChange={(e) => handleChange('first_name', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="John"
                                            />
                                            {errors.first_name && <p className="text-red-500 text-sm mt-1">{errors.first_name}</p>}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Last Name *</label>
                                            <input
                                                type="text"
                                                value={formData.last_name}
                                                onChange={(e) => handleChange('last_name', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="Smith"
                                            />
                                            {errors.last_name && <p className="text-red-500 text-sm mt-1">{errors.last_name}</p>}
                                        </div>
                                    </div>

                                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Date of Birth (dd/mm/yyyy) *</label>
                                            <input
                                                type="text"
                                                value={formData.date_of_birth}
                                                onChange={(e) => handleChange('date_of_birth', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="15/03/1985"
                                                maxLength="10"
                                            />
                                            {errors.date_of_birth && <p className="text-red-500 text-sm mt-1">{errors.date_of_birth}</p>}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Gender *</label>
                                            <select
                                                value={formData.gender}
                                                onChange={(e) => handleChange('gender', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            >
                                                <option value="">Select Gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                                <option value="Other">Other</option>
                                                <option value="Prefer not to say">Prefer not to say</option>
                                            </select>
                                            {errors.gender && <p className="text-red-500 text-sm mt-1">{errors.gender}</p>}
                                        </div>
                                    </div>

                                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Email Address *</label>
                                            <input
                                                type="email"
                                                value={formData.email}
                                                onChange={(e) => handleChange('email', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="john.smith@example.com"
                                            />
                                            {errors.email && <p className="text-red-500 text-sm mt-1">{errors.email}</p>}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Telephone *</label>
                                            <input
                                                type="tel"
                                                value={formData.mobile_phone}
                                                onChange={(e) => handleChange('mobile_phone', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="07123 456789"
                                            />
                                            {errors.mobile_phone && <p className="text-red-500 text-sm mt-1">{errors.mobile_phone}</p>}
                                        </div>
                                    </div>

                                    <div className="flex justify-end mt-6">
                                        <button
                                            type="button"
                                            onClick={handleNext}
                                            className="btn-navy px-8 py-3 text-white font-semibold rounded-lg"
                                        >
                                            Next Step →
                                        </button>
                                    </div>
                                </div>
                            )}

                            {/* Step 2: Address & Emergency Contact */}
                            {currentStep === 2 && (
                                <div className="space-y-4">
                                    <h2 className="text-xl font-bold navy-text mb-4">Address & Emergency Contact</h2>
                                    
                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Address Line 1 *</label>
                                        <input
                                            type="text"
                                            value={formData.address_line1}
                                            onChange={(e) => handleChange('address_line1', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            placeholder="123 High Street"
                                        />
                                        {errors.address_line1 && <p className="text-red-500 text-sm mt-1">{errors.address_line1}</p>}
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Address Line 2</label>
                                        <input
                                            type="text"
                                            value={formData.address_line2}
                                            onChange={(e) => handleChange('address_line2', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            placeholder="Didsbury (optional)"
                                        />
                                    </div>

                                    <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">City/Town *</label>
                                            <input
                                                type="text"
                                                value={formData.city}
                                                onChange={(e) => handleChange('city', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="Manchester"
                                            />
                                            {errors.city && <p className="text-red-500 text-sm mt-1">{errors.city}</p>}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">County *</label>
                                            <input
                                                type="text"
                                                value={formData.county}
                                                onChange={(e) => handleChange('county', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="Greater Manchester"
                                            />
                                            {errors.county && <p className="text-red-500 text-sm mt-1">{errors.county}</p>}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Postcode *</label>
                                            <input
                                                type="text"
                                                value={formData.postcode}
                                                onChange={(e) => handleChange('postcode', e.target.value.toUpperCase())}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="M20 2WY"
                                                maxLength="8"
                                            />
                                            {errors.postcode && <p className="text-red-500 text-sm mt-1">{errors.postcode}</p>}
                                        </div>
                                    </div>

                                    <hr className="my-6" />
                                    <h3 className="text-lg font-bold text-gray-900 mb-4">Emergency Contact</h3>

                                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Emergency Contact Name *</label>
                                            <input
                                                type="text"
                                                value={formData.emergency_contact}
                                                onChange={(e) => handleChange('emergency_contact', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="Jane Smith"
                                            />
                                            {errors.emergency_contact && <p className="text-red-500 text-sm mt-1">{errors.emergency_contact}</p>}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Emergency Contact Telephone *</label>
                                            <input
                                                type="tel"
                                                value={formData.emergency_phone}
                                                onChange={(e) => handleChange('emergency_phone', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                                placeholder="07987 654321"
                                            />
                                            {errors.emergency_phone && <p className="text-red-500 text-sm mt-1">{errors.emergency_phone}</p>}
                                        </div>
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Relationship to Patient *</label>
                                        <input
                                            type="text"
                                            value={formData.emergency_relationship}
                                            onChange={(e) => handleChange('emergency_relationship', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            placeholder="Wife, Husband, Mother, Father, etc."
                                        />
                                        {errors.emergency_relationship && <p className="text-red-500 text-sm mt-1">{errors.emergency_relationship}</p>}
                                    </div>

                                    <div className="flex justify-between mt-6">
                                        <button
                                            type="button"
                                            onClick={handleBack}
                                            className="px-8 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50"
                                        >
                                            ← Previous
                                        </button>
                                        <button
                                            type="button"
                                            onClick={handleNext}
                                            className="btn-navy px-8 py-3 text-white font-semibold rounded-lg"
                                        >
                                            Next Step →
                                        </button>
                                    </div>
                                </div>
                            )}

                            {/* Step 3: Medical Information */}
                            {currentStep === 3 && (
                                <div className="space-y-4">
                                    <h2 className="text-xl font-bold navy-text mb-4">Medical Information</h2>
                                    
                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Medical Conditions</label>
                                        <textarea
                                            value={formData.medical_conditions}
                                            onChange={(e) => handleChange('medical_conditions', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            rows="3"
                                            placeholder="List any existing medical conditions (optional)"
                                        />
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Current Medications</label>
                                        <textarea
                                            value={formData.medications}
                                            onChange={(e) => handleChange('medications', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            rows="3"
                                            placeholder="List current medications and dosages (optional)"
                                        />
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Known Allergies</label>
                                        <textarea
                                            value={formData.allergies}
                                            onChange={(e) => handleChange('allergies', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            rows="3"
                                            placeholder="List any known allergies (optional)"
                                        />
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Insurance Details</label>
                                        <textarea
                                            value={formData.insurance_details}
                                            onChange={(e) => handleChange('insurance_details', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            rows="2"
                                            placeholder="Insurance provider and policy number (optional)"
                                        />
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Additional Notes</label>
                                        <textarea
                                            value={formData.notes}
                                            onChange={(e) => handleChange('notes', e.target.value)}
                                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                                            rows="3"
                                            placeholder="Any additional information (optional)"
                                        />
                                    </div>

                                    {errors.submit && (
                                        <div className="bg-red-50 border-l-4 border-red-500 p-4 rounded">
                                            <p className="text-red-800 font-semibold text-sm">{errors.submit}</p>
                                        </div>
                                    )}

                                    <div className="flex justify-between mt-6">
                                        <button
                                            type="button"
                                            onClick={handleBack}
                                            className="px-8 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50"
                                        >
                                            ← Previous
                                        </button>
                                        <button
                                            type="submit"
                                            disabled={loading}
                                            className="btn-navy px-8 py-3 text-white font-semibold rounded-lg flex items-center"
                                        >
                                            {loading ? (
                                                <>
                                                    <span>Creating Patient...</span>
                                                    <div className="spinner ml-2"></div>
                                                </>
                                            ) : (
                                                '✓ Create Patient'
                                            )}
                                        </button>
                                    </div>
                                </div>
                            )}
                        </form>
                    </div>
                </div>
            );
        };

        // Dashboard Component
        const Dashboard = ({ onNavigate }) => {
            const [stats, setStats] = useState({
                total_patients: 0,
                active_patients: 0,
                new_this_month: 0,
                assessments_completed: 0
            });
            const [loading, setLoading] = useState(true);

            useEffect(() => {
                fetchStats();
            }, []);

            const fetchStats = async () => {
                try {
                    const response = await fetch('/api/v1/patients/stats/overview');
                    if (response.ok) {
                        const data = await response.json();
                        setStats(data);
                    }
                } catch (error) {
                    console.error('Error fetching stats:', error);
                }
                setLoading(false);
            };

            return (
                <div className="p-6">
                    <div className="mb-6">
                        <h1 className="text-3xl font-bold text-gray-900">Dashboard</h1>
                        <p className="text-gray-600 mt-1">Welcome to your clinic management portal</p>
                    </div>

                    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                        <div className="stat-card bg-white rounded-lg p-6 shadow-md border border-gray-200">
                            <div className="flex items-center justify-between mb-4">
                                <div className="w-12 h-12 navy-bg text-white rounded-full flex items-center justify-center">
                                    <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                    </svg>
                                </div>
                            </div>
                            <h3 className="text-gray-600 text-sm font-semibold mb-1">Total Patients</h3>
                            <p className="text-3xl font-bold navy-text">{stats.total_patients}</p>
                            <p className="text-sm text-green-600 mt-2">+{stats.new_this_month} this month</p>
                        </div>

                        <div className="stat-card bg-white rounded-lg p-6 shadow-md border border-gray-200">
                            <div className="flex items-center justify-between mb-4">
                                <div className="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center">
                                    <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </div>
                            </div>
                            <h3 className="text-gray-600 text-sm font-semibold mb-1">Active Patients</h3>
                            <p className="text-3xl font-bold navy-text">{stats.active_patients}</p>
                            <p className="text-sm text-gray-500 mt-2">Currently in treatment</p>
                        </div>

                        <div className="stat-card bg-white rounded-lg p-6 shadow-md border border-gray-200">
                            <div className="flex items-center justify-between mb-4">
                                <div className="w-12 h-12 bg-green-500 text-white rounded-full flex items-center justify-center">
                                    <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                    </svg>
                                </div>
                            </div>
                            <h3 className="text-gray-600 text-sm font-semibold mb-1">Assessments</h3>
                            <p className="text-3xl font-bold navy-text">{stats.assessments_completed}</p>
                            <p className="text-sm text-gray-500 mt-2">Completed this month</p>
                        </div>

                        <div className="stat-card bg-white rounded-lg p-6 shadow-md border border-gray-200">
                            <div className="flex items-center justify-between mb-4">
                                <div className="w-12 h-12 bg-orange-500 text-white rounded-full flex items-center justify-center">
                                    <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            </div>
                            <h3 className="text-gray-600 text-sm font-semibold mb-1">Appointments</h3>
                            <p className="text-3xl font-bold navy-text">0</p>
                            <p className="text-sm text-gray-500 mt-2">Scheduled today</p>
                        </div>
                    </div>

                    <div className="bg-white rounded-lg p-6 shadow-md border border-gray-200 mb-8">
                        <h2 className="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
                        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <button
                                onClick={() => onNavigate('patient-registration')}
                                className="btn-navy text-white px-6 py-3 rounded-lg font-semibold flex items-center justify-center"
                            >
                                <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v16m8-8H4" />
                                </svg>
                                New Patient
                            </button>
                            <button
                                onClick={() => onNavigate('assessments')}
                                className="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold flex items-center justify-center transition-all"
                            >
                                <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                </svg>
                                New Assessment
                            </button>
                            <button
                                onClick={() => onNavigate('appointments')}
                                className="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-semibold flex items-center justify-center transition-all"
                            >
                                <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                Schedule Appointment
                            </button>
                        </div>
                    </div>

                    <div className="bg-white rounded-lg p-6 shadow-md border border-gray-200">
                        <h2 className="text-xl font-bold text-gray-900 mb-4">Recent Activity</h2>
                        <p className="text-gray-500 text-center py-8">No recent activity to display</p>
                    </div>
                </div>
            );
        };

        // Patients List Component
        const PatientsList = ({ onNavigate, onViewPatient }) => {
            const [patients, setPatients] = useState([]);
            const [loading, setLoading] = useState(true);
            const [searchTerm, setSearchTerm] = useState('');

            useEffect(() => {
                fetchPatients();
            }, []);

            const fetchPatients = async () => {
                try {
                    const response = await fetch('/api/v1/clinic/patients');
                    if (response.ok) {
                        const data = await response.json();
                        setPatients(data);
                    }
                } catch (error) {
                    console.error('Error fetching patients:', error);
                }
                setLoading(false);
            };

            const filteredPatients = patients.filter(patient =>
                patient.first_name?.toLowerCase().includes(searchTerm.toLowerCase()) ||
                patient.last_name?.toLowerCase().includes(searchTerm.toLowerCase()) ||
                patient.email?.toLowerCase().includes(searchTerm.toLowerCase()) ||
                patient.patient_number?.toLowerCase().includes(searchTerm.toLowerCase())
            );

            return (
                <div className="p-6">
                    <div className="mb-6 flex items-center justify-between">
                        <div>
                            <h1 className="text-3xl font-bold text-gray-900">Patients</h1>
                            <p className="text-gray-600 mt-1">Manage your patient records</p>
                        </div>
                        <button 
                            onClick={() => onNavigate('patient-registration')}
                            className="btn-navy text-white px-6 py-3 rounded-lg font-semibold flex items-center"
                        >
                            <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v16m8-8H4" />
                            </svg>
                            Add New Patient
                        </button>
                    </div>

                    <div className="mb-6">
                        <input
                            type="text"
                            placeholder="Search by name, email, or patient number..."
                            value={searchTerm}
                            onChange={(e) => setSearchTerm(e.target.value)}
                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-transparent outline-none"
                        />
                    </div>

                    <div className="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
                        {loading ? (
                            <div className="p-8 text-center">
                                <div className="spinner mx-auto mb-4"></div>
                                <p className="text-gray-600">Loading patients...</p>
                            </div>
                        ) : filteredPatients.length === 0 ? (
                            <div className="p-8 text-center">
                                <p className="text-gray-600">No patients found</p>
                            </div>
                        ) : (
                            <table className="w-full">
                                <thead className="navy-dark-bg text-white">
                                    <tr>
                                        <th className="px-6 py-4 text-left text-sm font-semibold">Patient Number</th>
                                        <th className="px-6 py-4 text-left text-sm font-semibold">Name</th>
                                        <th className="px-6 py-4 text-left text-sm font-semibold">Email</th>
                                        <th className="px-6 py-4 text-left text-sm font-semibold">Phone</th>
                                        <th className="px-6 py-4 text-left text-sm font-semibold">Status</th>
                                        <th className="px-6 py-4 text-left text-sm font-semibold">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {filteredPatients.map((patient, index) => (
                                        <tr key={patient.id} className="table-row border-b border-gray-200">
                                            <td className="px-6 py-4 text-sm font-medium navy-text">
                                                {patient.patient_number}
                                            </td>
                                            <td className="px-6 py-4">
                                                <div className="font-semibold text-gray-900">
                                                    {patient.first_name} {patient.last_name}
                                                </div>
                                            </td>
                                            <td className="px-6 py-4 text-sm text-gray-600">
                                                {patient.email}
                                            </td>
                                            <td className="px-6 py-4 text-sm text-gray-600">
                                                {patient.mobile_phone}
                                            </td>
                                            <td className="px-6 py-4">
                                                <span className={`px-3 py-1 rounded-full text-xs font-semibold ${
                                                    patient.status === 'active' ? 'bg-green-100 text-green-800' :
                                                    patient.status === 'invited' ? 'bg-blue-100 text-blue-800' :
                                                    'bg-gray-100 text-gray-800'
                                                }`}>
                                                    {patient.status}
                                                </span>
                                            </td>
                                            <td className="px-6 py-4">
                                                <button 
                                                    onClick={() => onViewPatient(patient.id)}
                                                    className="navy-text hover:underline text-sm font-semibold"
                                                >
                                                    View
                                                </button>
                                            </td>
                                        </tr>
                                    ))}
                                </tbody>
                            </table>
                        )}
                    </div>
                </div>
            );
        };


        // Patient Profile Component
        const PatientProfile = ({ patientId, onBack }) => {
            const [patient, setPatient] = useState(null);
            const [stats, setStats] = useState({});
            const [loading, setLoading] = useState(true);
            const [activeTab, setActiveTab] = useState('overview');
            const [editMode, setEditMode] = useState(false);
            const [formData, setFormData] = useState({});
            const [saving, setSaving] = useState(false);

            useEffect(() => {
                fetchPatientData();
            }, [patientId]);

            const fetchPatientData = async () => {
                try {
                    const response = await fetch(`/api/v1/clinic/patients/${patientId}`);
                    if (response.ok) {
                        const data = await response.json();
                        setPatient(data.patient);
                        setStats(data.stats);
                        setFormData(data.patient);
                    }
                } catch (error) {
                    console.error('Error fetching patient:', error);
                }
                setLoading(false);
            };

            const handleSave = async () => {
                setSaving(true);
                try {
                    const response = await fetch(`/api/v1/clinic/patients/${patientId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData)
                    });

                    if (response.ok) {
                        alert('Patient updated successfully!');
                        setPatient(formData);
                        setEditMode(false);
                        fetchPatientData();
                    } else {
                        alert('Failed to update patient');
                    }
                } catch (error) {
                    alert('Error updating patient');
                }
                setSaving(false);
            };

            const handleChange = (field, value) => {
                setFormData({ ...formData, [field]: value });
            };

            const handleStatusChange = async (newStatus) => {
                try {
                    const response = await fetch(`/api/v1/clinic/patients/${patientId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ status: newStatus })
                    });

                    if (response.ok) {
                        alert(`Patient ${newStatus === 'active' ? 'activated' : 'deactivated'} successfully!`);
                        fetchPatientData();
                    } else {
                        alert('Failed to update patient status');
                    }
                } catch (error) {
                    alert('Error updating patient status');
                }
            };

            const handleDeletePatient = async () => {
                try {
                    const response = await fetch(`/api/v1/clinic/patients/${patientId}`, {
                        method: 'DELETE'
                    });

                    if (response.ok) {
                        alert('Patient deleted successfully');
                        onBack();
                    } else {
                        alert('Failed to delete patient');
                    }
                } catch (error) {
                    alert('Error deleting patient');
                }
            };

            const formatDate = (dateString) => {
                if (!dateString) return '';
                const date = new Date(dateString);
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}/${month}/${year}`;
            };

            if (loading) {
                return (
                    <div className="p-6 flex items-center justify-center">
                        <div className="spinner"></div>
                    </div>
                );
            }

            if (!patient) {
                return (
                    <div className="p-6">
                        <p className="text-red-600">Patient not found</p>
                    </div>
                );
            }

            return (
                <div className="p-6">
                    {/* Header */}
                    <div className="mb-6">
                        <button
                            onClick={onBack}
                            className="flex items-center text-gray-600 hover:text-gray-900 mb-4"
                        >
                            <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
                            </svg>
                            Back to Patients
                        </button>

                        <div className="flex items-center justify-between">
                            <div className="flex items-center space-x-4">
                                <div className="w-20 h-20 navy-bg text-white rounded-full flex items-center justify-center text-3xl font-bold">
                                    {patient.first_name?.charAt(0)}{patient.last_name?.charAt(0)}
                                </div>
                                <div>
                                    <h1 className="text-3xl font-bold text-gray-900">
                                        {patient.first_name} {patient.last_name}
                                    </h1>
                                    <p className="text-gray-600">{patient.patient_number}</p>
                                    <span className={`inline-block px-3 py-1 rounded-full text-xs font-semibold mt-2 ${
                                        patient.status === 'active' ? 'bg-green-100 text-green-800' :
                                        patient.status === 'invited' ? 'bg-blue-100 text-blue-800' :
                                        'bg-gray-100 text-gray-800'
                                    }`}>
                                        {patient.status}
                                    </span>
                                </div>
                            </div>
                            <div className="flex space-x-3">
                                {!editMode ? (
                                    <>
                                        <button
                                            onClick={() => setEditMode(true)}
                                            className="btn-navy px-6 py-3 text-white rounded-lg font-semibold"
                                        >
                                            Edit Patient
                                        </button>
                                        {patient.status === 'active' ? (
                                            <button
                                                onClick={() => {
                                                    if (confirm('Are you sure you want to deactivate this patient? They will no longer be able to book appointments.')) {
                                                        handleStatusChange('inactive');
                                                    }
                                                }}
                                                className="px-6 py-3 bg-orange-500 hover:bg-orange-600 text-white rounded-lg font-semibold transition-all"
                                            >
                                                Deactivate Patient
                                            </button>
                                        ) : (
                                            <button
                                                onClick={() => {
                                                    if (confirm('Are you sure you want to activate this patient?')) {
                                                        handleStatusChange('active');
                                                    }
                                                }}
                                                className="px-6 py-3 bg-green-500 hover:bg-green-600 text-white rounded-lg font-semibold transition-all"
                                            >
                                                Activate Patient
                                            </button>
                                        )}
                                        <button
                                            onClick={() => {
                                                if (confirm('⚠️ WARNING: Are you sure you want to DELETE this patient? This action cannot be undone and will remove all patient data including assessments and appointments!')) {
                                                    if (confirm('FINAL CONFIRMATION: Type DELETE to confirm patient deletion')) {
                                                        handleDeletePatient();
                                                    }
                                                }
                                            }}
                                            className="px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-all"
                                        >
                                            Delete Patient
                                        </button>
                                    </>
                                ) : (
                                    <>
                                        <button
                                            onClick={() => {
                                                setEditMode(false);
                                                setFormData(patient);
                                            }}
                                            className="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg font-semibold hover:bg-gray-50"
                                        >
                                            Cancel
                                        </button>
                                        <button
                                            onClick={handleSave}
                                            disabled={saving}
                                            className="btn-navy px-6 py-3 text-white rounded-lg font-semibold flex items-center"
                                        >
                                            {saving ? (
                                                <>
                                                    <span>Saving...</span>
                                                    <div className="spinner ml-2"></div>
                                                </>
                                            ) : (
                                                '✓ Save Changes'
                                            )}
                                        </button>
                                    </>
                                )}
                            </div>
                        </div>
                    </div>

                    {/* Stats Cards */}
                    <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                        <div className="bg-white rounded-lg p-6 shadow-md border border-gray-200">
                            <h3 className="text-gray-600 text-sm font-semibold mb-1">Total Assessments</h3>
                            <p className="text-3xl font-bold navy-text">{stats.assessment_count || 0}</p>
                        </div>
                        <div className="bg-white rounded-lg p-6 shadow-md border border-gray-200">
                            <h3 className="text-gray-600 text-sm font-semibold mb-1">Total Appointments</h3>
                            <p className="text-3xl font-bold navy-text">{stats.appointment_count || 0}</p>
                        </div>
                        <div className="bg-white rounded-lg p-6 shadow-md border border-gray-200">
                            <h3 className="text-gray-600 text-sm font-semibold mb-1">Therapy Plans</h3>
                            <p className="text-3xl font-bold navy-text">{stats.therapy_count || 0}</p>
                        </div>
                    </div>

                    {/* Tabs */}
                    <div className="bg-white rounded-lg shadow-md border border-gray-200">
                        <div className="border-b border-gray-200">
                            <div className="flex space-x-8 px-6">
                                <button
                                    onClick={() => setActiveTab('overview')}
                                    className={`py-4 px-2 border-b-2 font-semibold transition-colors ${
                                        activeTab === 'overview'
                                            ? 'border-blue-900 navy-text'
                                            : 'border-transparent text-gray-600 hover:text-gray-900'
                                    }`}
                                >
                                    Overview
                                </button>
                                <button
                                    onClick={() => setActiveTab('personal')}
                                    className={`py-4 px-2 border-b-2 font-semibold transition-colors ${
                                        activeTab === 'personal'
                                            ? 'border-blue-900 navy-text'
                                            : 'border-transparent text-gray-600 hover:text-gray-900'
                                    }`}
                                >
                                    Personal Info
                                </button>
                                <button
                                    onClick={() => setActiveTab('medical')}
                                    className={`py-4 px-2 border-b-2 font-semibold transition-colors ${
                                        activeTab === 'medical'
                                            ? 'border-blue-900 navy-text'
                                            : 'border-transparent text-gray-600 hover:text-gray-900'
                                    }`}
                                >
                                    Medical History
                                </button>
                                <button
                                    onClick={() => setActiveTab('assessments')}
                                    className={`py-4 px-2 border-b-2 font-semibold transition-colors ${
                                        activeTab === 'assessments'
                                            ? 'border-blue-900 navy-text'
                                            : 'border-transparent text-gray-600 hover:text-gray-900'
                                    }`}
                                >
                                    Assessments
                                </button>
                            </div>
                        </div>

                        <div className="p-6">
                            {/* Overview Tab */}
                            {activeTab === 'overview' && (
                                <div className="space-y-6">
                                    <h2 className="text-xl font-bold text-gray-900">Patient Overview</h2>
                                    <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <h3 className="font-semibold text-gray-900 mb-3">Contact Information</h3>
                                            <div className="space-y-2">
                                                <p><span className="font-semibold">Email:</span> {patient.email}</p>
                                                <p><span className="font-semibold">Telephone:</span> {patient.mobile_phone}</p>
                                                <p><span className="font-semibold">Date of Birth:</span> {formatDate(patient.date_of_birth)}</p>
                                                <p><span className="font-semibold">Gender:</span> {patient.gender || 'Not specified'}</p>
                                            </div>
                                        </div>
                                        <div>
                                            <h3 className="font-semibold text-gray-900 mb-3">Address</h3>
                                            <div className="space-y-1">
                                                <p>{patient.address_line1}</p>
                                                {patient.address_line2 && <p>{patient.address_line2}</p>}
                                                <p>{patient.city}</p>
                                                <p>{patient.county}</p>
                                                <p>{patient.postcode}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            )}

                            {/* Personal Info Tab */}
                            {activeTab === 'personal' && (
                                <div className="space-y-6">
                                    <h2 className="text-xl font-bold text-gray-900">Personal Information</h2>
                                    
                                    <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">First Name</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.first_name || ''}
                                                    onChange={(e) => handleChange('first_name', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.first_name}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Last Name</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.last_name || ''}
                                                    onChange={(e) => handleChange('last_name', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.last_name}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Email</label>
                                            {editMode ? (
                                                <input
                                                    type="email"
                                                    value={formData.email || ''}
                                                    onChange={(e) => handleChange('email', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.email}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Telephone</label>
                                            {editMode ? (
                                                <input
                                                    type="tel"
                                                    value={formData.mobile_phone || ''}
                                                    onChange={(e) => handleChange('mobile_phone', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.mobile_phone}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Gender</label>
                                            {editMode ? (
                                                <select
                                                    value={formData.gender || ''}
                                                    onChange={(e) => handleChange('gender', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                >
                                                    <option value="">Select Gender</option>
                                                    <option value="Male">Male</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Other">Other</option>
                                                    <option value="Prefer not to say">Prefer not to say</option>
                                                </select>
                                            ) : (
                                                <p className="text-gray-900">{patient.gender || 'Not specified'}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Date of Birth</label>
                                            <p className="text-gray-900">{formatDate(patient.date_of_birth)}</p>
                                        </div>
                                    </div>

                                    <hr className="my-6" />

                                    <h3 className="text-lg font-bold text-gray-900">Address</h3>
                                    <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div className="md:col-span-2">
                                            <label className="block text-gray-700 font-semibold mb-2">Address Line 1</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.address_line1 || ''}
                                                    onChange={(e) => handleChange('address_line1', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.address_line1}</p>
                                            )}
                                        </div>

                                        <div className="md:col-span-2">
                                            <label className="block text-gray-700 font-semibold mb-2">Address Line 2</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.address_line2 || ''}
                                                    onChange={(e) => handleChange('address_line2', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.address_line2 || '-'}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">City/Town</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.city || ''}
                                                    onChange={(e) => handleChange('city', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.city}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">County</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.county || ''}
                                                    onChange={(e) => handleChange('county', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.county}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Postcode</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.postcode || ''}
                                                    onChange={(e) => handleChange('postcode', e.target.value.toUpperCase())}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                    maxLength="8"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.postcode}</p>
                                            )}
                                        </div>
                                    </div>

                                    <hr className="my-6" />

                                    <h3 className="text-lg font-bold text-gray-900">Emergency Contact</h3>
                                    <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Contact Name</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.emergency_contact || ''}
                                                    onChange={(e) => handleChange('emergency_contact', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.emergency_contact}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Contact Telephone</label>
                                            {editMode ? (
                                                <input
                                                    type="tel"
                                                    value={formData.emergency_phone || ''}
                                                    onChange={(e) => handleChange('emergency_phone', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.emergency_phone}</p>
                                            )}
                                        </div>

                                        <div>
                                            <label className="block text-gray-700 font-semibold mb-2">Relationship</label>
                                            {editMode ? (
                                                <input
                                                    type="text"
                                                    value={formData.emergency_relationship || ''}
                                                    onChange={(e) => handleChange('emergency_relationship', e.target.value)}
                                                    className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                />
                                            ) : (
                                                <p className="text-gray-900">{patient.emergency_relationship}</p>
                                            )}
                                        </div>
                                    </div>
                                </div>
                            )}

                            {/* Medical History Tab */}
                            {activeTab === 'medical' && (
                                <div className="space-y-6">
                                    <h2 className="text-xl font-bold text-gray-900">Medical History</h2>
                                    
                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Medical Conditions</label>
                                        {editMode ? (
                                            <textarea
                                                value={formData.medical_conditions || ''}
                                                onChange={(e) => handleChange('medical_conditions', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                rows="4"
                                            />
                                        ) : (
                                            <p className="text-gray-900 whitespace-pre-wrap">{patient.medical_conditions || 'None recorded'}</p>
                                        )}
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Current Medications</label>
                                        {editMode ? (
                                            <textarea
                                                value={formData.medications || ''}
                                                onChange={(e) => handleChange('medications', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                rows="4"
                                            />
                                        ) : (
                                            <p className="text-gray-900 whitespace-pre-wrap">{patient.medications || 'None recorded'}</p>
                                        )}
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Known Allergies</label>
                                        {editMode ? (
                                            <textarea
                                                value={formData.allergies || ''}
                                                onChange={(e) => handleChange('allergies', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                rows="4"
                                            />
                                        ) : (
                                            <p className="text-gray-900 whitespace-pre-wrap">{patient.allergies || 'None recorded'}</p>
                                        )}
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Insurance Details</label>
                                        {editMode ? (
                                            <textarea
                                                value={formData.insurance_details || ''}
                                                onChange={(e) => handleChange('insurance_details', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                rows="3"
                                            />
                                        ) : (
                                            <p className="text-gray-900 whitespace-pre-wrap">{patient.insurance_details || 'None recorded'}</p>
                                        )}
                                    </div>

                                    <div>
                                        <label className="block text-gray-700 font-semibold mb-2">Additional Notes</label>
                                        {editMode ? (
                                            <textarea
                                                value={formData.notes || ''}
                                                onChange={(e) => handleChange('notes', e.target.value)}
                                                className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-900 outline-none"
                                                rows="4"
                                            />
                                        ) : (
                                            <p className="text-gray-900 whitespace-pre-wrap">{patient.notes || 'None recorded'}</p>
                                        )}
                                    </div>
                                </div>
                            )}

                            {/* Assessments Tab */}
                            {activeTab === 'assessments' && (
                                <div className="space-y-6">
                                    <h2 className="text-xl font-bold text-gray-900">Assessments History</h2>
                                    <p className="text-gray-600">Assessment history will be displayed here</p>
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            );
        };


        // Main App Component
        // Assessment Module Component
        const AssessmentModule = () => {
            const [currentStep, setCurrentStep] = useState('patient-selection'); // 'patient-selection', 'assessment', 'results'
            const [patients, setPatients] = useState([]);
            const [filteredPatients, setFilteredPatients] = useState([]);
            const [searchTerm, setSearchTerm] = useState('');
            const [selectedPatient, setSelectedPatient] = useState(null);
            const [questions, setQuestions] = useState([]);
            const [currentQuestionIndex, setCurrentQuestionIndex] = useState(0);
            const [answers, setAnswers] = useState([]);
            const [loading, setLoading] = useState(false);
            const [assessmentResults, setAssessmentResults] = useState(null);

            // Load patients on mount
            useEffect(() => {
                loadPatients();
            }, []);

            // Filter patients based on search
            useEffect(() => {
                if (searchTerm === '') {
                    setFilteredPatients(patients);
                } else {
                    const filtered = patients.filter(p =>
                        p.first_name?.toLowerCase().includes(searchTerm.toLowerCase()) ||
                        p.last_name?.toLowerCase().includes(searchTerm.toLowerCase()) ||
                        p.email?.toLowerCase().includes(searchTerm.toLowerCase()) ||
                        p.patient_number?.toLowerCase().includes(searchTerm.toLowerCase())
                    );
                    setFilteredPatients(filtered);
                }
            }, [searchTerm, patients]);

            const loadPatients = async () => {
                try {
                    setLoading(true);
                    const response = await fetch('/api/v1/clinic/patients', {
                        headers: {
                            'Authorization': `Bearer ${localStorage.getItem('celloxen_token')}`
                        }
                    });
                    const data = await response.json();
                    setPatients(data);
                    setFilteredPatients(data);
                } catch (error) {
                    console.error('Error loading patients:', error);
                } finally {
                    setLoading(false);
                }
            };

            const selectPatient = async (patient) => {
                setSelectedPatient(patient);
                setLoading(true);
                
                try {
                    // Load questions
                    const response = await fetch('/api/v1/assessment/questions');
                    const data = await response.json();
                    const questionsData = data.questions || data;  // Handle both wrapped and unwrapped responses
                    setQuestions(questionsData);
                    setAnswers(new Array(questionsData.length).fill(null));
                    setCurrentQuestionIndex(0);
                    setCurrentStep('assessment');
                } catch (error) {
                    console.error('Error loading questions:', error);
                    alert('Failed to load assessment questions. Please try again.');
                } finally {
                    setLoading(false);
                }
            };

            const selectAnswer = (answerIndex) => {
                const newAnswers = [...answers];
                newAnswers[currentQuestionIndex] = answerIndex;
                setAnswers(newAnswers);
            };

            const nextQuestion = () => {
                if (answers[currentQuestionIndex] === null) {
                    alert('Please select an answer before continuing.');
                    return;
                }

                if (currentQuestionIndex < questions.length - 1) {
                    setCurrentQuestionIndex(currentQuestionIndex + 1);
                } else {
                    submitAssessment();
                }
            };

            const previousQuestion = () => {
                if (currentQuestionIndex > 0) {
                    setCurrentQuestionIndex(currentQuestionIndex - 1);
                }
            };

            const submitAssessment = async () => {
                setLoading(true);
                
                try {
                    const response = await fetch('/api/v1/assessment/submit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            patient_id: selectedPatient.id,
                            answers: answers.map((answer, index) => ({
                                question_id: questions[index].id,
                                answer_index: answer
                            }))
                        })
                    });
                    
                    const result = await response.json();
                    setAssessmentResults(result);
                    setCurrentStep('results');
                } catch (error) {
                    console.error('Error submitting assessment:', error);
                    alert('Failed to submit assessment. Please try again.');
                } finally {
                    setLoading(false);
                }
            };

            const generateReport = async () => {
                try {
                    // Open PDF in new tab
                    const url = `/api/v1/assessment/${assessmentResults.assessment_id}/report`;
                    window.open(url, '_blank');
                } catch (error) {
                    console.error('Error generating report:', error);
                    alert('Failed to generate PDF report. Please try again.');
                }
            };

            const startNewAssessment = () => {
                setCurrentStep('patient-selection');
                setSelectedPatient(null);
                setQuestions([]);
                setAnswers([]);
                setCurrentQuestionIndex(0);
                setAssessmentResults(null);
                setSearchTerm('');
            };

            const getDomainName = (domain) => {
                const domainMap = {
                    'C-102': 'Vitality & Energy (C-102)',
                    'C-104': 'Comfort & Mobility (C-104)',
                    'C-105': 'Circulation & Heart (C-105)',
                    'C-107': 'Stress & Relaxation (C-107)',
                    'C-108': 'Metabolic Balance (C-108)',
                    'energy': 'Vitality & Energy (C-102)',
                    'comfort': 'Comfort & Mobility (C-104)',
                    'circulation': 'Circulation & Heart (C-105)',
                    'stress': 'Stress & Relaxation (C-107)',
                    'metabolic': 'Metabolic Balance (C-108)'
                };
                return domainMap[domain] || domain;
            };

            const getScoreColor = (score) => {
                if (score >= 75) return '#10b981'; // green
                if (score >= 50) return '#f59e0b'; // orange
                if (score >= 25) return '#ef4444'; // red
                return '#dc2626'; // dark red
            };

            // Patient Selection Step
            if (currentStep === 'patient-selection') {
                return (
                    <div className="p-6">
                        <div className="mb-6">
                            <h1 className="text-3xl font-bold text-gray-900">Wellness Assessment</h1>
                            <p className="text-gray-600 mt-2">Select a patient to begin the 35-question comprehensive assessment</p>
                        </div>

                        {/* Search Bar */}
                        <div className="mb-6">
                            <div className="relative">
                                <svg className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                                <input
                                    type="text"
                                    placeholder="Search by name, email, or patient number..."
                                    value={searchTerm}
                                    onChange={(e) => setSearchTerm(e.target.value)}
                                    className="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                />
                            </div>
                        </div>

                        {/* Patients List */}
                        {loading ? (
                            <div className="text-center py-12">
                                <div className="spinner mx-auto mb-4"></div>
                                <p className="text-gray-600">Loading patients...</p>
                            </div>
                        ) : filteredPatients.length === 0 ? (
                            <div className="text-center py-12">
                                <svg className="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                                </svg>
                                <p className="text-gray-600">No patients found</p>
                            </div>
                        ) : (
                            <div className="grid gap-4">
                                {filteredPatients.map(patient => (
                                    <div
                                        key={patient.id}
                                        onClick={() => selectPatient(patient)}
                                        className="bg-white border border-gray-200 rounded-lg p-4 hover:border-blue-500 hover:shadow-md transition-all cursor-pointer"
                                    >
                                        <div className="flex items-center justify-between">
                                            <div>
                                                <h3 className="text-lg font-semibold text-gray-900">
                                                    {patient.first_name} {patient.last_name}
                                                </h3>
                                                <div className="flex gap-4 mt-1 text-sm text-gray-600">
                                                    <span>{patient.email}</span>
                                                    <span>•</span>
                                                    <span>{patient.patient_number}</span>
                                                </div>
                                            </div>
                                            <svg className="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                                            </svg>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}
                    </div>
                );
            }

            // Assessment Questions Step
            if (currentStep === 'assessment') {
                const currentQuestion = questions[currentQuestionIndex];
                const progress = ((currentQuestionIndex + 1) / questions.length) * 100;

                return (
                    <div className="p-6">
                        {/* Header */}
                        <div className="mb-6">
                            <div className="flex items-center justify-between mb-4">
                                <div>
                                    <h2 className="text-2xl font-bold text-gray-900">
                                        Assessment for: {selectedPatient.first_name} {selectedPatient.last_name}
                                    </h2>
                                    <p className="text-gray-600 mt-1">
                                        Question {currentQuestionIndex + 1} of {questions.length}
                                    </p>
                                </div>
                                <div className="text-right">
                                    <span className="text-sm font-semibold navy-text">
                                        {getDomainName(currentQuestion.therapy_domain || currentQuestion.domain)}
                                    </span>
                                </div>
                            </div>

                            {/* Progress Bar */}
                            <div className="w-full bg-gray-200 rounded-full h-3">
                                <div 
                                    className="navy-bg h-3 rounded-full transition-all duration-300"
                                    style={{ width: `${progress}%` }}
                                ></div>
                            </div>
                        </div>

                        {/* Question Card */}
                        <div className="bg-white rounded-lg border border-gray-200 p-8 mb-6">
                            <h3 className="text-xl font-semibold text-gray-900 mb-6">
                                {currentQuestion.question_text}
                            </h3>

                            {/* Answer Options */}
                            <div className="space-y-3">
                                {(currentQuestion.answer_options || 
                                        (typeof currentQuestion.response_options === 'string' 
                                            ? JSON.parse(currentQuestion.response_options) 
                                            : currentQuestion.response_options) || 
                                        []).map((option, index) => (
                                    <div
                                        key={index}
                                        onClick={() => selectAnswer(index)}
                                        className={`
                                            p-4 rounded-lg border-2 cursor-pointer transition-all
                                            ${answers[currentQuestionIndex] === index
                                                ? 'border-blue-600 bg-blue-50'
                                                : 'border-gray-200 hover:border-blue-300 hover:bg-gray-50'
                                            }
                                        `}
                                    >
                                        <div className="flex items-center gap-3">
                                            <div className={`
                                                w-5 h-5 rounded-full border-2 flex items-center justify-center
                                                ${answers[currentQuestionIndex] === index
                                                    ? 'border-blue-600 bg-blue-600'
                                                    : 'border-gray-300'
                                                }
                                            `}>
                                                {answers[currentQuestionIndex] === index && (
                                                    <svg className="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd" />
                                                    </svg>
                                                )}
                                            </div>
                                            <span className="text-gray-800">{option}</span>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </div>

                        {/* Navigation Buttons */}
                        <div className="flex justify-between">
                            <button
                                onClick={previousQuestion}
                                disabled={currentQuestionIndex === 0}
                                className={`
                                    px-6 py-3 rounded-lg font-semibold flex items-center gap-2
                                    ${currentQuestionIndex === 0
                                        ? 'bg-gray-100 text-gray-400 cursor-not-allowed'
                                        : 'bg-gray-200 text-gray-700 hover:bg-gray-300'
                                    }
                                `}
                            >
                                <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
                                </svg>
                                Previous
                            </button>

                            <button
                                onClick={nextQuestion}
                                disabled={answers[currentQuestionIndex] === null || loading}
                                className={`
                                    px-6 py-3 rounded-lg font-semibold flex items-center gap-2
                                    ${answers[currentQuestionIndex] === null || loading
                                        ? 'bg-gray-100 text-gray-400 cursor-not-allowed'
                                        : 'btn-navy text-white'
                                    }
                                `}
                            >
                                {loading ? (
                                    <>
                                        <div className="spinner"></div>
                                        Processing...
                                    </>
                                ) : currentQuestionIndex === questions.length - 1 ? (
                                    <>
                                        Submit Assessment
                                        <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                                        </svg>
                                    </>
                                ) : (
                                    <>
                                        Next
                                        <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                                        </svg>
                                    </>
                                )}
                            </button>
                        </div>
                    </div>
                );
            }

            // Results Step
            if (currentStep === 'results') {
                return (
                    <div className="p-6">
                        {/* Success Header */}
                        <div className="text-center mb-8">
                            <div className="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
                                <svg className="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                            <h2 className="text-3xl font-bold text-gray-900 mb-2">Assessment Complete!</h2>
                            <p className="text-gray-600">
                                Wellness scores calculated for {selectedPatient.first_name} {selectedPatient.last_name}
                            </p>
                        </div>

                        {/* Overall Score */}
                        <div className="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-8 mb-8 text-white text-center">
                            <h3 className="text-lg font-semibold mb-2">Overall Wellness Score</h3>
                            <div className="text-6xl font-bold mb-2">
                                {assessmentResults.scores.overall.toFixed(0)}%
                            </div>
                            <p className="text-blue-100">
                                {assessmentResults.scores.overall >= 75 ? 'Excellent Wellness' :
                                 assessmentResults.scores.overall >= 50 ? 'Moderate Wellness' :
                                 assessmentResults.scores.overall >= 25 ? 'Needs Support' :
                                 'Critical Support Needed'}
                            </p>
                        </div>

                        {/* Domain Scores */}
                        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                            {/* Energy Score */}
                            <div className="bg-white rounded-lg border border-gray-200 p-6 text-center">
                                <div 
                                    className="w-32 h-32 mx-auto mb-4 rounded-full flex items-center justify-center text-3xl font-bold text-white"
                                    style={{ background: `linear-gradient(135deg, ${getScoreColor(assessmentResults.scores.energy)} 0%, ${getScoreColor(assessmentResults.scores.energy)}dd 100%)` }}
                                >
                                    {assessmentResults.scores.energy.toFixed(0)}
                                </div>
                                <h3 className="font-bold text-gray-900 mb-1">Vitality & Energy</h3>
                                <p className="text-sm text-gray-600">C-102 Support</p>
                            </div>

                            {/* Comfort Score */}
                            <div className="bg-white rounded-lg border border-gray-200 p-6 text-center">
                                <div 
                                    className="w-32 h-32 mx-auto mb-4 rounded-full flex items-center justify-center text-3xl font-bold text-white"
                                    style={{ background: `linear-gradient(135deg, ${getScoreColor(assessmentResults.scores.comfort)} 0%, ${getScoreColor(assessmentResults.scores.comfort)}dd 100%)` }}
                                >
                                    {assessmentResults.scores.comfort.toFixed(0)}
                                </div>
                                <h3 className="font-bold text-gray-900 mb-1">Comfort & Mobility</h3>
                                <p className="text-sm text-gray-600">C-104 Support</p>
                            </div>

                            {/* Circulation Score */}
                            <div className="bg-white rounded-lg border border-gray-200 p-6 text-center">
                                <div 
                                    className="w-32 h-32 mx-auto mb-4 rounded-full flex items-center justify-center text-3xl font-bold text-white"
                                    style={{ background: `linear-gradient(135deg, ${getScoreColor(assessmentResults.scores.circulation)} 0%, ${getScoreColor(assessmentResults.scores.circulation)}dd 100%)` }}
                                >
                                    {assessmentResults.scores.circulation.toFixed(0)}
                                </div>
                                <h3 className="font-bold text-gray-900 mb-1">Circulation & Heart</h3>
                                <p className="text-sm text-gray-600">C-105 Wellness</p>
                            </div>

                            {/* Stress Score */}
                            <div className="bg-white rounded-lg border border-gray-200 p-6 text-center">
                                <div 
                                    className="w-32 h-32 mx-auto mb-4 rounded-full flex items-center justify-center text-3xl font-bold text-white"
                                    style={{ background: `linear-gradient(135deg, ${getScoreColor(assessmentResults.scores.stress)} 0%, ${getScoreColor(assessmentResults.scores.stress)}dd 100%)` }}
                                >
                                    {assessmentResults.scores.stress.toFixed(0)}
                                </div>
                                <h3 className="font-bold text-gray-900 mb-1">Stress & Relaxation</h3>
                                <p className="text-sm text-gray-600">C-107 Support</p>
                            </div>

                            {/* Metabolic Score */}
                            <div className="bg-white rounded-lg border border-gray-200 p-6 text-center">
                                <div 
                                    className="w-32 h-32 mx-auto mb-4 rounded-full flex items-center justify-center text-3xl font-bold text-white"
                                    style={{ background: `linear-gradient(135deg, ${getScoreColor(assessmentResults.scores.metabolic)} 0%, ${getScoreColor(assessmentResults.scores.metabolic)}dd 100%)` }}
                                >
                                    {assessmentResults.scores.metabolic.toFixed(0)}
                                </div>
                                <h3 className="font-bold text-gray-900 mb-1">Metabolic Balance</h3>
                                <p className="text-sm text-gray-600">C-108 Support</p>
                            </div>
                        </div>

                        {/* Action Buttons */}
                        <div className="flex gap-4">
                            <button
                                onClick={generateReport}
                                className="flex-1 btn-navy text-white py-4 rounded-lg font-semibold flex items-center justify-center gap-2"
                            >
                                <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                Generate PDF Report
                            </button>
                            <button
                                onClick={startNewAssessment}
                                className="px-8 py-4 bg-gray-200 text-gray-700 rounded-lg font-semibold hover:bg-gray-300"
                            >
                                New Assessment
                            </button>
                        </div>
                    </div>
                );
            }

            return null;
        };


        const App = () => {
            const { user, logout, loading } = useAuth();
            const [currentPage, setCurrentPage] = useState('dashboard');
            const [selectedPatientId, setSelectedPatientId] = useState(null);

            if (loading) {
                return (
                    <div className="min-h-screen flex items-center justify-center">
                        <div className="spinner"></div>
                    </div>
                );
            }

            if (!user) {
                return <LoginPage />;
            }

            const handlePatientSuccess = () => {
                setCurrentPage('patients');
            };

            return (
                <div className="min-h-screen bg-gray-50">
                    <div className="navy-dark-bg text-white">
                        <div className="flex items-center justify-between px-6 py-4">
                            <div className="flex items-center space-x-4">
                                <div className="w-10 h-10 bg-white navy-text rounded-full flex items-center justify-center font-bold text-xl">
                                    C
                                </div>
                                <span className="text-xl font-bold">Celloxen Health Portal</span>
                            </div>
                            <div className="flex items-center space-x-6">
                                <span className="text-sm opacity-90">{user.email}</span>
                                <button
                                    onClick={logout}
                                    className="px-4 py-2 bg-white bg-opacity-20 rounded-lg hover:bg-opacity-30 transition-all text-sm font-semibold"
                                >
                                    Sign Out
                                </button>
                            </div>
                        </div>
                    </div>

                    <div className="flex">
                        <div className="navy-bg text-white w-64 min-h-screen p-6">
                            <nav className="space-y-2">
                                <button
                                    onClick={() => setCurrentPage('dashboard')}
                                    className={`sidebar-item w-full text-left px-4 py-3 rounded-lg flex items-center space-x-3 ${
                                        currentPage === 'dashboard' ? 'active' : ''
                                    }`}
                                >
                                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                    </svg>
                                    <span>Dashboard</span>
                                </button>

                                <button
                                    onClick={() => setCurrentPage('patients')}
                                    className={`sidebar-item w-full text-left px-4 py-3 rounded-lg flex items-center space-x-3 ${
                                        currentPage === 'patients' ? 'active' : ''
                                    }`}
                                >
                                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                    </svg>
                                    <span>Patients</span>
                                </button>

                                <button
                                    onClick={() => setCurrentPage('assessments')}
                                    className={`sidebar-item w-full text-left px-4 py-3 rounded-lg flex items-center space-x-3 ${
                                        currentPage === 'assessments' ? 'active' : ''
                                    }`}
                                >
                                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                    </svg>
                                    <span>Assessments</span>
                                </button>

                                <button
                                    onClick={() => setCurrentPage('appointments')}
                                    className={`sidebar-item w-full text-left px-4 py-3 rounded-lg flex items-center space-x-3 ${
                                        currentPage === 'appointments' ? 'active' : ''
                                    }`}
                                >
                                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <span>Appointments</span>
                                </button>
                            </nav>
                        </div>

                        <div className="flex-1">
                            {currentPage === 'dashboard' && <Dashboard onNavigate={setCurrentPage} />}
                            {currentPage === 'patients' && (
                                <PatientsList 
                                    onNavigate={setCurrentPage}
                                    onViewPatient={(patientId) => {
                                        setSelectedPatientId(patientId);
                                        setCurrentPage('patient-profile');
                                    }}
                                />
                            )}
                            {currentPage === 'patient-registration' && (
                                <PatientRegistration 
                                    onBack={() => setCurrentPage('patients')} 
                                    onSuccess={handlePatientSuccess}
                                />
                            )}
                        {currentPage === 'assessments' && <AssessmentModule />}
                            {currentPage === 'appointments' && (
                                <div className="p-6">
                                    <h1 className="text-3xl font-bold text-gray-900">Appointments</h1>
                                    <p className="text-gray-600 mt-2">Appointments module coming soon...</p>
                                </div>
                            )}
                            {currentPage === 'patient-profile' && selectedPatientId && (
                                <PatientProfile 
                                    patientId={selectedPatientId} 
                                    onBack={() => setCurrentPage('patients')}
                                />
                            )}
                        </div>
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(
            <AuthProvider>
                <App />
            </AuthProvider>
        );
    </script>
</body>
</html>
