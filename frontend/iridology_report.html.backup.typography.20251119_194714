<body class="min-h-screen bg-gray-50">
    <div id="root"></div>
    <script type="text/babel">
        const { useState, useEffect } = React;
        
        const IridologyReport = () => {
            const [loading, setLoading] = useState(true);
            const [error, setError] = useState(null);
            const [reportData, setReportData] = useState(null);

            useEffect(() => {
                loadReportData();
            }, []);

            const getAnalysisIdFromUrl = () => {
                const urlParams = new URLSearchParams(window.location.search);
                return urlParams.get('id') || urlParams.get('analysisid') || urlParams.get('analysisId');
            };

            const loadReportData = async () => {
                try {
                    const analysisId = getAnalysisIdFromUrl();
                    
                    if (!analysisId) {
                        setError('No analysis ID provided in URL');
                        setLoading(false);
                        return;
                    }

                    const response = await fetch(`/api/v1/iridology/${analysisId}/results`, {
                        headers: {
                            'Authorization': `Bearer ${localStorage.getItem('celloxen_token')}`
                        }
                    });

                    if (!response.ok) {
                        throw new Error(`Failed to load report: ${response.status}`);
                    }

                    const data = await response.json();

                    if (data.success) {
                        setReportData(data);
                    } else {
                        setError(data.detail || 'Failed to load report data');
                    }
                } catch (err) {
                    setError(err.message);
                } finally {
                    setLoading(false);
                }
            };

            const formatDate = (dateString) => {
                if (!dateString) return '-';
                const date = new Date(dateString);
                return date.toLocaleDateString('en-GB', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                });
            };

            const handlePrint = () => {
                window.print();
            };

            // Convert markdown to HTML for better printing
            const renderMarkdown = (text) => {
                if (!text) return '';
                
                // Use marked.js if available, otherwise basic conversion
                if (window.marked) {
                    return window.marked.parse(text);
                }
                
                // Basic markdown conversion
                return text
                    .replace(/### (.*?)$/gm, '<h3>$1</h3>')
                    .replace(/## (.*?)$/gm, '<h2>$1</h2>')
                    .replace(/# (.*?)$/gm, '<h1>$1</h1>')
                    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                    .replace(/\*(.*?)\*/g, '<em>$1</em>')
                    .replace(/^- (.*?)$/gm, '<li>$1</li>')
                    .replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>')
                    .replace(/\n\n/g, '</p><p>')
                    .replace(/^(.+)$/gm, '<p>$1</p>')
                    .replace(/---/g, '<hr>');
            };

            if (loading) {
                return (
                    <div className="min-h-screen navy-gradient flex items-center justify-center p-4">
                        <div className="bg-white rounded-2xl shadow-2xl p-12 text-center max-w-md">
                            <div className="inline-flex items-center justify-center w-20 h-20 navy-bg rounded-full mb-6">
                                <svg className="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                            </div>
                            <h2 className="text-2xl font-bold navy-text mb-4">Loading Report</h2>
                            <div className="flex justify-center">
                                <div className="spinner"></div>
                            </div>
                            <p className="text-gray-600 mt-4">Fetching analysis data...</p>
                        </div>
                    </div>
                );
            }

            if (error) {
                return (
                    <div className="min-h-screen navy-gradient flex items-center justify-center p-4">
                        <div className="bg-white rounded-2xl shadow-2xl p-12 text-center max-w-md">
                            <div className="inline-flex items-center justify-center w-20 h-20 bg-red-100 rounded-full mb-6">
                                <svg className="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                            </div>
                            <h2 className="text-2xl font-bold text-red-600 mb-4">Error Loading Report</h2>
                            <div className="bg-red-50 border-l-4 border-red-500 p-4 rounded mb-4 text-left">
                                <p className="text-red-800 font-semibold">{error}</p>
                            </div>
                            <button
                                onClick={() => window.close()}
                                className="mt-6 px-6 py-3 btn-navy text-white rounded-lg font-semibold"
                            >
                                Close Window
                            </button>
                        </div>
                    </div>
                );
            }

            const patient = reportData.patient || {};
            const analysisNumber = reportData.analysis_number || '-';
            const constitutionalType = reportData.constitutional_type || 'Unknown';
            const constitutionalStrength = reportData.constitutional_strength || 'Unknown';
            const createdAt = reportData.created_at;
            const fullReport = reportData.full_report || null;
            const practitioner = reportData.practitioner || null;

            return (
                <div className="min-h-screen bg-gray-50 py-8 px-4">
                    <div className="max-w-6xl mx-auto">
                        {/* Header */}
                        <div className="navy-gradient rounded-2xl shadow-2xl p-8 mb-6 text-center avoid-break">
                            <div className="inline-flex items-center justify-center w-16 h-16 bg-white rounded-full mb-4">
                                <svg className="w-8 h-8 navy-text" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </div>
                            <h1 className="text-3xl font-bold text-white mb-2">Iridology Analysis Report</h1>
                            <div className="inline-block px-4 py-2 bg-green-500 text-white rounded-full text-sm font-semibold mt-2">
                                âœ“ Analysis Complete
                            </div>
                        </div>

                        {/* Action Buttons */}
                        <div className="flex justify-end gap-3 mb-6 no-print">
                            <button
                                onClick={handlePrint}
                                className="btn-navy px-6 py-3 text-white rounded-lg font-semibold flex items-center gap-2"
                            >
                                <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                                </svg>
                                Print Report
                            </button>
                            <button
                                onClick={() => window.close()}
                                className="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white rounded-lg font-semibold transition-all flex items-center gap-2"
                            >
                                <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                Close
                            </button>
                        </div>

                        {/* Patient Information */}
                        <div className="bg-white rounded-xl shadow-md border border-gray-200 p-8 mb-6 avoid-break">
                            <h2 className="text-2xl font-bold navy-text mb-6 pb-3 border-b-2 border-blue-600">
                                Patient Information
                            </h2>
                            <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
                                <div className="stat-card bg-gray-50 rounded-lg p-4">
                                    <div className="text-sm font-semibold text-gray-600 uppercase mb-2">Full Name</div>
                                    <div className="text-lg font-bold navy-text">
                                        {patient.first_name && patient.last_name 
                                            ? `${patient.first_name} ${patient.last_name}` 
                                            : '-'}
                                    </div>
                                </div>
                                <div className="stat-card bg-gray-50 rounded-lg p-4">
                                    <div className="text-sm font-semibold text-gray-600 uppercase mb-2">Patient Number</div>
                                    <div className="text-lg font-bold navy-text">{patient.patient_number || '-'}</div>
                                </div>
                                <div className="stat-card bg-gray-50 rounded-lg p-4">
                                    <div className="text-sm font-semibold text-gray-600 uppercase mb-2">Date of Birth</div>
                                    <div className="text-lg font-bold navy-text">{formatDate(patient.date_of_birth)}</div>
                                </div>
                            </div>
                        </div>

                        {/* Analysis Details */}
                        <div className="bg-white rounded-xl shadow-md border border-gray-200 p-8 mb-6 avoid-break">
                            <h2 className="text-2xl font-bold navy-text mb-6 pb-3 border-b-2 border-blue-600">
                                Analysis Details
                            </h2>
                            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                                <div className="stat-card bg-blue-50 rounded-lg p-5 border border-blue-200">
                                    <div className="text-xs font-bold text-blue-700 uppercase mb-2">Analysis Number</div>
                                    <div className="text-xl font-bold text-blue-900">{analysisNumber}</div>
                                </div>
                                <div className="stat-card bg-blue-50 rounded-lg p-5 border border-blue-200">
                                    <div className="text-xs font-bold text-blue-700 uppercase mb-2">Constitutional Type</div>
                                    <div className="text-xl font-bold text-blue-900">{constitutionalType}</div>
                                </div>
                                <div className="stat-card bg-blue-50 rounded-lg p-5 border border-blue-200">
                                    <div className="text-xs font-bold text-blue-700 uppercase mb-2">Strength</div>
                                    <div className="text-xl font-bold text-blue-900">{constitutionalStrength}</div>
                                </div>
                                <div className="stat-card bg-blue-50 rounded-lg p-5 border border-blue-200">
                                    <div className="text-xs font-bold text-blue-700 uppercase mb-2">Analysis Date</div>
                                    <div className="text-xl font-bold text-blue-900">{formatDate(createdAt)}</div>
                                </div>
                            </div>
                            
                            {practitioner && (
                                <div className="bg-gray-50 rounded-lg p-5 border border-gray-200">
                                    <div className="text-sm font-semibold text-gray-600 uppercase mb-2">Analysed By</div>
                                    <div className="text-lg font-bold navy-text">
                                        {practitioner.first_name} {practitioner.last_name}
                                        {practitioner.credentials && <span className="text-gray-600 font-normal"> ({practitioner.credentials})</span>}
                                    </div>
                                </div>
                            )}
                        </div>

                        {/* Full Report */}
                        <div className="bg-white rounded-xl shadow-md border border-gray-200 p-8 page-break-before">
                            <h2 className="text-2xl font-bold navy-text mb-6 pb-3 border-b-2 border-blue-600">
                                Full Analysis Report
                            </h2>
                            
                            {fullReport ? (
                                <div className="bg-blue-50 rounded-lg p-6">
                                    <div 
                                        className="text-gray-800 leading-relaxed markdown-content"
                                        dangerouslySetInnerHTML={{ __html: renderMarkdown(fullReport) }}
                                    />
                                </div>
                            ) : (
                                <div className="bg-yellow-50 border-2 border-dashed border-yellow-400 rounded-lg p-8 text-center">
                                    <svg className="w-16 h-16 text-yellow-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    <p className="text-lg font-semibold text-yellow-800 mb-2">Full Analysis Report</p>
                                    <p className="text-sm text-yellow-700">The detailed analysis report will appear here once the AI analysis is completed.</p>
                                </div>
                            )}
                        </div>

                        {/* Footer */}
                        <div className="mt-8 text-center text-gray-500 text-sm">
                            <p className="mb-1">Celloxen Iridology Analysis System</p>
                            <p>Report Generated: {new Date().toLocaleString('en-GB', { 
                                day: '2-digit', 
                                month: '2-digit', 
                                year: 'numeric',
                                hour: '2-digit',
                                minute: '2-digit'
                            })}</p>
                        </div>
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<IridologyReport />);
    </script>
</body>
</html>
