                    <div class="info-value" id="patientNumber">Loading...</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Date of Birth:</div>
                    <div class="info-value" id="patientDOB">-</div>
                </div>
            </div>
        </div>

        <div class="section">
            <div class="section-title">Analysis Details</div>
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Analysis Number:</div>
                    <div class="info-value" id="analysisNumber">Loading...</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Constitutional Type:</div>
                    <div class="info-value" id="constitutionalType">Loading...</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Strength:</div>
                    <div class="info-value" id="constitutionalStrength">Loading...</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Date:</div>
                    <div class="info-value" id="analysisDate">-</div>
                </div>
            </div>
        </div>

        <div class="section">
            <div class="section-title">Full Report</div>
            <div class="report-content" id="reportContent">Loading report...</div>
        </div>
    </div>

    <script>
        // Get analysis ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        const analysisId = urlParams.get('analysisId');
        
        console.log('üìã Loading report for analysis:', analysisId);
        
        if (!analysisId) {
            document.body.innerHTML = '<div class="error">No analysis ID provided</div>';
        } else {
            loadReport();
        }

        async function loadReport() {
            try {
                console.log(`Fetching: /api/v1/iridology/${analysisId}/report`);
                const response = await fetch(`/api/v1/iridology/${analysisId}/report`);
                
                if (!response.ok) {
                    throw new Error(`Failed to load report: ${response.status}`);
                }
                
                const data = await response.json();
                console.log('üìä Report data received:', data);
                
                displayReport(data);
                
            } catch (error) {
                console.error('‚ùå Error loading report:', error);
                document.getElementById('reportContent').innerHTML = 
                    `<div class="error">Failed to load report: ${error.message}</div>`;
            }
        }
        
        function displayReport(data) {
            console.log('üé® Displaying report data');
            
            // Patient Information
            if (data.patient) {
                document.getElementById('patientName').textContent = data.patient.name || 'N/A';
                document.getElementById('patientNumber').textContent = data.patient.patient_number || 'N/A';
                document.getElementById('patientDOB').textContent = data.patient.date_of_birth || 'N/A';
            }
            
            // Analysis Details
            if (data.analysis) {
                document.getElementById('analysisNumber').textContent = data.analysis.analysis_number || 'N/A';
                document.getElementById('constitutionalType').textContent = data.analysis.constitutional_type || 'Unknown';
                document.getElementById('constitutionalStrength').textContent = data.analysis.constitutional_strength || 'Unknown';
                document.getElementById('analysisDate').textContent = data.analysis.date || 'N/A';
            }
            
            // Report Content
            if (data.report_text) {
                document.getElementById('reportContent').textContent = data.report_text;
            }
            
            console.log('‚úÖ Report displayed successfully');
        }
    </script>
