# Celloxen Health Portal - Environment Configuration Template
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=celloxen_user
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE
DB_NAME=celloxen_portal

# Application Security
SECRET_KEY=YOUR_SECURE_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS
ENVIRONMENT=production
DEBUG=false

# API Keys
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# SMTP Configuration
SMTP_HOST=smtp.ionos.co.uk
SMTP_PORT=587
SMTP_USER=health@celloxen.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE
SMTP_FROM_EMAIL=health@celloxen.com
SMTP_FROM_NAME=Celloxen Health Portal

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Twilio SMS Configuration (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
